{
  "name" : "Kirby",
  "version" : "1.0.1",
  "description" : "Create shareable images with text perfect for all your social networks.",
  "background" : {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/style.css"],
      "js": ["loadMeme.js", "canvas.js", "main.js"]
    }
  ],
  "permissions" : [
    "activeTab",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Open Kirby",
    "default_icon": "icon-185.png"
  },
  "minimum_chrome_version" : "6.0.0.0",
  "icons" : {
    "16" : "icon-16.png",
    "32" : "icon-32.png",
    "48" : "icon-48.png",
    "128" : "icon-128.png",
    "185" : "icon-185.png"
  },
  "manifest_version": 2
}
